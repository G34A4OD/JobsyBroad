<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo_jobs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Broadcast Dinamico"
            android:textColor="@color/white"
            android:translationY="130dp"
            android:textSize="40sp"
            android:textAlignment="center"/>
<!--        Quiero que cambie el thread por un executor, como seria?, manten lo simple y basico del codigo, para que pueda entender como lo hiciste-->
        <TextView
            android:id="@+id/textBroadcastDinamico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broadcast Dinamico: Modo Avion"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:translationY="600dp"
            android:textSize="40sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>